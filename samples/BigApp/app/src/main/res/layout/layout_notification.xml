<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:clickable="true"
  android:layoutDirection="ltr"
  android:orientation="horizontal">

  <ImageView
    android:layout_width="@dimen/dp48"
    android:layout_height="@dimen/dp48"
    android:layout_gravity="left|top"
    android:layout_marginLeft="@dimen/dp4"
    android:layout_marginTop="@dimen/dp12"
    android:padding="@dimen/dp4"
    android:src="@mipmap/icon" />

  <LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp12"
    android:layout_marginStart="@dimen/dp12"
    android:layout_marginTop="@dimen/dp24"
    android:layout_weight="1"
    android:orientation="vertical">


    <LinearLayout
      android:id="@+id/ln_ll_message_a"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/dp8">

      <TextView
        android:id="@+id/ln_txt_a1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:singleLine="true"
        android:text="hasan : "
        android:textAppearance="@style/NotificationText"
        android:textDirection="ltr"
        android:textSize="@dimen/dp16" />

      <TextView
        android:id="@+id/ln_txt_a2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="left"
        android:singleLine="true"
        android:text="how are you"
        android:textAppearance="@style/NotificationText"
        android:textDirection="ltr"
        android:textSize="@dimen/dp14" />

      <TextView
        android:id="@+id/ln_txt_a3"
        android:layout_width="@dimen/dp48"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingLeft="@dimen/dp8"
        android:singleLine="true"
        android:text="10:52"
        android:textAppearance="@style/NotificationText"
        android:textSize="@dimen/dp12" />

    </LinearLayout>

    <LinearLayout
      android:id="@+id/ln_ll_message_b"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/dp8">

      <TextView
        android:id="@+id/ln_txt_b1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:singleLine="true"
        android:text="hasan : "
        android:textAppearance="@style/NotificationText"
        android:textDirection="ltr"
        android:textSize="@dimen/dp16" />

      <TextView
        android:id="@+id/ln_txt_b2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="left"
        android:singleLine="true"
        android:text="how are you"
        android:textAppearance="@style/NotificationText"
        android:textDirection="ltr"
        android:textSize="@dimen/dp14" />

      <TextView
        android:id="@+id/ln_txt_b3"
        android:layout_width="@dimen/dp48"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingLeft="@dimen/dp8"
        android:singleLine="true"
        android:text="10:52"
        android:textAppearance="@style/NotificationText"
        android:textSize="@dimen/dp12" />

    </LinearLayout>

    <LinearLayout
      android:id="@+id/ln_ll_message_c"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/dp8">

      <TextView
        android:id="@+id/ln_txt_c1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:singleLine="true"
        android:text="hasan : "
        android:textAppearance="@style/NotificationText"
        android:textDirection="ltr"
        android:textSize="@dimen/dp16" />

      <TextView
        android:id="@+id/ln_txt_c2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="left"
        android:singleLine="true"
