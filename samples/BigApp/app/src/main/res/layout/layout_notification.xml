        android:gravity="right"
        android:paddingLeft="@dimen/dp8"
        android:singleLine="true"
        android:text="10:52"
        android:textAppearance="@style/NotificationText"
        android:textSize="@dimen/dp12" />

    </LinearLayout>

    <TextView
      android:id="@+id/ln_txt_more"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/dp8"
      android:text="..."
      android:textAppearance="@style/NotificationText"
      android:textSize="@dimen/dp12"
      android:visibility="visible" />

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="1px"
      android:layout_marginBottom="@dimen/dp8"
      android:textAppearance="@style/NotificationText"></LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/dp8"
      android:gravity="center">

      <ImageView
        android:id="@+id/mln_btn_replay"
        android:layout_width="@dimen/dp32"
        android:layout_height="@dimen/dp28"
        android:gravity="top|center"
        android:padding="@dimen/dp4"
        android:src="@mipmap/reply_icon" />

      <TextView
        android:id="@+id/ln_txt_replay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/replay"
        android:textAppearance="@style/NotificationText"
        android:textSize="@dimen/dp14" />

      <TextView
        android:id="@+id/ln_txt_unread_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="right"
        android:paddingLeft="@dimen/dp8"
        android:singleLine="true"
        android:text="you have 10 new message"
        android:textAppearance="@style/NotificationText"
        android:textSize="@dimen/dp12" />

    </LinearLayout>

  </LinearLayout>


  <ImageView
    android:id="@+id/mln_btn_close"
    android:layout_width="@dimen/dp40"
    android:layout_height="@dimen/dp40"
    android:padding="@dimen/dp8"


    android:src="@mipmap/cross" />

