<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="40dp"
  android:background="@color/gray_4c"
  android:clickable="true"
  android:orientation="horizontal"
  android:visibility="visible">

  <TextView
    android:id="@+id/chat_txt_addContact"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:gravity="center_vertical"
    android:paddingEnd="@dimen/dp20"
    android:paddingLeft="@dimen/dp20"
    android:paddingRight="@dimen/dp20"
    android:paddingStart="@dimen/dp20"
    android:text="@string/block_user"
    android:textColor="@color/toolbar_background"
    android:textSize="@dimen/dp16" />

  <net.iGap.module.MaterialDesignTextView
    android:id="@+id/chat_txt_close"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_alignParentEnd="true"
    android:layout_alignParentRight="true"
    android:gravity="center_vertical"
    android:paddingEnd="@dimen/dp20"
    android:paddingLeft="@dimen/dp20"
    android:paddingRight="@dimen/dp20"
    android:paddingStart="@dimen/dp20"
    android:text="@string/md_close_button"
    android:textAppearance="@style/TextIconAppearance.all"
    android:textColor="@color/red"
    android:textSize="@dimen/dp22" />

</RelativeLayout>